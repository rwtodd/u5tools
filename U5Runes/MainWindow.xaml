<Window x:Class="U5Runes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U5Runes"
        mc:Ignorable="d"
        Title="Ultima V Runes" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="RuneGlyphs.xaml" />
                <ResourceDictionary>
                    <SolidColorBrush x:Key="RuneColor" Color="{Binding ElementName=FGColor, Path=Text}" />
                    <Thickness x:Key="LineMargin" Bottom="1" Top="1" Left="0" Right="0" />
                    <Thickness x:Key="CharSpacing" Bottom="0" Top="0" Left="1" Right="1" />
                    <Style x:Key="RuneLines" TargetType="Polyline">
                        <Setter Property="Stroke" Value="{StaticResource RuneColor}" />
                        <Setter Property="StrokeThickness" Value="1" />
                        <Setter Property="StrokeEndLineCap" Value="Flat" />
                        <Setter Property="StrokeStartLineCap" Value="Flat" />
                        <Setter Property="StrokeLineJoin" Value="Bevel" />
                    </Style>
                    <Style x:Key="CeneteredText" TargetType="StackPanel">
                        <Setter Property="Orientation" Value="Horizontal" />
                        <Setter Property="Margin" Value="{StaticResource LineMargin}" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GridSplitter Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" />
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
            <Button DockPanel.Dock="Bottom">What??</Button>
            <TextBox x:Name="FGColor" DockPanel.Dock="Bottom">Brown</TextBox>
            <TextBox x:Name="BGColor" DockPanel.Dock="Bottom">Gray</TextBox>
            <TextBox TextWrapping="Wrap" AcceptsReturn="True">Hello</TextBox>
        </DockPanel>
        <Border Grid.Row="0" Grid.Column="2" Background="{Binding ElementName=BGColor, Path=Text}">
            <Viewbox Stretch="Uniform" Margin="2,2,2,2">
                <Viewbox.BitmapEffect>
                    <DropShadowBitmapEffect Color="Black" Direction="-25" ShadowDepth="10" />
                </Viewbox.BitmapEffect>
                <StackPanel Orientation="Vertical">
                    <StackPanel Style="{StaticResource CeneteredText}">
                        <Control Style="{StaticResource Rune-d}" />
                        <Control Style="{StaticResource Rune-i}" />
                        <Control Style="{StaticResource Rune-d}" />
                    </StackPanel>
                    <StackPanel Style="{StaticResource CeneteredText}">
                        <Control Style="{StaticResource Rune-d}" />
                        <Control Style="{StaticResource Rune-d}" />
                    </StackPanel>
                </StackPanel>
            </Viewbox>
        </Border>
    </Grid>
</Window>
