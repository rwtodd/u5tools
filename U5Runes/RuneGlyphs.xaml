<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:U5Runes">
    <Style x:Key="Rune-d" TargetType="Control">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Control">
                    <Canvas Width="5" Height="10" Margin="{DynamicResource CharSpacing}">
                        <Polyline Style="{DynamicResource RuneLines}"
                                      Points="0,0 5,10 5,0 0,10 0,0 5,10" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Rune-i" TargetType="Control">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Control">
                    <Canvas Width="0" Height="10" Margin="{DynamicResource CharSpacing}">
                        <Polyline Style="{DynamicResource RuneLines}"
                                      Points="0,0 0,10" />
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>